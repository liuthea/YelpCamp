<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3 mb-3">
        <div class="card" style="width: 18rem;">
            <img src="<%=camp.image%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=camp.title%></h5>
              <p class="card-text"><%=camp.description%></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">$<%=camp.price%>/night</li>
              <li class="list-group-item"><%=camp.location%></li>
              
            </ul>
            <div class="card-body">
              <a href="/campgrounds/<%=camp._id%>/edit" class="card-link btn btn-warning">Edit</a>
              <form class="d-inline" action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
            </div class="my-3">
            <div class="card-footer"><a href="/campgrounds" class="card-link">All campgrounds</a></div>
          </div>
    </div>
<h2 class="mb-3 col-6 offset-3">Leave A Review</h2>
    <form class="mb-3 col-6 offset-3" action="/campgrounds/<%=camp._id%>/review" method="POST">
      <div class="mb-3">
        <label for="customRange1" class="form-label">Rating</label>
        <input type="range" name="review[rating]" min=1 max=5 class="form-range" id="customRange1">
      </div>
      <div class="mb-3">
        <label for="body">Review</label>
        <div>
        <textarea name="review[body]" id="body" cols="30" rows="10"></textarea></div>
      </div>
      <button class="btn btn-info">Submit</button>
    </form>

    <ul>
      <% for(let i of camp.reviews){%>
        <li><%=i.rating%></li>
        <li><%=i.body%></li>
        <%}%>
    </ul>
</div>
</div>
    <% layout('layouts/boilerplate') %>